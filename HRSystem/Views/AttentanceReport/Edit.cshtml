@model AttendanceReport

@{
    SelectList select_dept = new SelectList(ViewBag.Depts, "Id", "Name");
}

<section id="horizontal-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="content-header">Edit Employees Attendance</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-body">
                    <div class="px-3">
                        <form class="form form-horizontal mt-4" method="post" asp-controller="AttentanceReport" asp-action="SaveEdit" asp-route-id=@Model.Id>
                            <div class="form-body">

                                <div class=" row form-group">
                                    <label class="col-md-3 label-control" asp-for="AttendanceTime">Attendance time: </label>
                                    <div class="position-relative has-icon-left col-lg-9">
                                        <input type="time" id="timesheetinput5" class="form-control" asp-for="AttendanceTime">
                                        <div class="form-control-position">
                                            <i class="ft-clock"></i>
                                        </div>
                                        <span asp-validation-for="AttendanceTime"></span>
                                    </div>
                                </div>

                                <div class=" row form-group">
                                    <label class="col-md-3 label-control" asp-for="LeavingTime">Leaving time: </label>
                                    <div class="position-relative has-icon-left col-lg-9">
                                        <input type="time" id="timesheetinput6" class="form-control" asp-for="LeavingTime">
                                        <div class="form-control-position">
                                            <i class="ft-clock"></i>
                                        </div>
                                        <span asp-validation-for="LeavingTime"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" asp-for="Date">Date : </label>
                                    <div class="col-md-9">
                                        <input type="date" id="projectinput10" class="form-control" asp-for="Date">
                                        
                                        <span asp-validation-for="Date"></span>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-success pr-3 pl-3" data-toggle="modal" data-target="#exampleModal">Edit</button>

                                </div>
                            </div>


                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" id="modalDialog">
                                    <div class="modal-content" id="modalContent">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h5>Are you sure you need to update this data ? </h5>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            <input type="submit" value="Update" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal -->

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



</section>

@section Scripts{
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
