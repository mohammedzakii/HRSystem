@model AttendanceReport

@{
    SelectList select_dept = new SelectList(ViewBag.Depts, "Id", "Name");
}




<section id="horizontal-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="content-header">Add Employees Attendance</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-body">
                    <div class="px-3">
                        <form class="form form-horizontal mt-4" method="post" asp-controller="AttentanceReport" asp-action="AddAttentance">
                            <div class="form-body">

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" asp-for="EmpId">Employee Id </label>
                                    <div class="col-md-9">
                                        <input asp-for="EmpId" type="text" id="projectinput1" class="form-control">
                                        <span asp-validation-for="EmpId"class="text-danger"></span>
                                    </div>

                                </div>

                                <div class=" row form-group">
                                    <label class="col-md-3 label-control" asp-for="AttendanceTime">Attendance time: </label>
                                    <div class="position-relative has-icon-left col-lg-9">
                                        <input type="time" id="timesheetinput5" class="form-control" asp-for="AttendanceTime">
                                        <div class="form-control-position">
                                            <i class="ft-clock"></i>
                                        </div>
                                        <span asp-validation-for="AttendanceTime"class="text-danger"></span>
                                    </div>
                                </div>

                                <div class=" row form-group">
                                    <label class="col-md-3 label-control" asp-for="LeavingTime">Leaving time: </label>
                                    <div class="position-relative has-icon-left col-lg-9">
                                        <input type="time" id="timesheetinput6" class="form-control" asp-for="LeavingTime">
                                        <div class="form-control-position">
                                            <i class="ft-clock"></i>
                                        </div>
                                        <span asp-validation-for="LeavingTime"class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control" asp-for="Date">Date : </label>
                                    <div class="col-md-9">
                                        <input type="date" id="projectinput10" class="form-control" asp-for="Date">
                                        
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-actions">
                                      <a class="btn btn-danger" asp-action="Index" asp-controller="AttentanceReport"  >Back</a>
                                    <input type="submit" value="Add" class="btn btn-success" />
                                  
                                </div>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>



</section>

@section Scripts{
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



